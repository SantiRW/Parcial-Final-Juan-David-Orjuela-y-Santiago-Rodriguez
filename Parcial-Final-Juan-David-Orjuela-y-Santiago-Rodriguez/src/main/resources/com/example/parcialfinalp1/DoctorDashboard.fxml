<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.parcialfinalp1.Controllers.DoctorDashboardController"
           prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #27C8F5;">

    <AnchorPane prefHeight="600.0" prefWidth="800.0">
        <children>
            <!-- Header -->
            <AnchorPane prefHeight="80.0" prefWidth="800.0" style="-fx-background-color: #1C4147;">
                <children>
                    <Label fx:id="lblWelcome" layoutX="30.0" layoutY="25.0"
                           style="-fx-text-fill: white; -fx-font-weight: bold;"
                           text="Dashboard de Doctor">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Label fx:id="lblDoctorName" layoutX="30.0" layoutY="50.0"
                           style="-fx-text-fill: #27C8F5;"
                           text="Dr. Nombre">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </children>
            </AnchorPane>

            <!-- Main Content Area -->
            <ScrollPane layoutY="80.0" prefHeight="520.0" prefWidth="800.0"
                        fitToWidth="true" style="-fx-background-color: transparent;">
                <content>
                    <VBox spacing="20.0" style="-fx-background-color: #27C8F5;">
                        <padding>
                            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                        </padding>

                        <!-- Doctor Information Card -->
                        <AnchorPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>
                            <children>
                                <VBox spacing="10.0">
                                    <Label text="Información del Doctor" style="-fx-font-weight: bold; -fx-font-size: 18px;">
                                        <font>
                                            <Font name="System Bold" size="18.0" />
                                        </font>
                                    </Label>
                                    <Separator prefWidth="760.0" />
                                    <HBox spacing="50.0">
                                        <VBox spacing="5.0">
                                            <Label text="ID:" style="-fx-font-weight: bold;" />
                                            <Label fx:id="lblDoctorId" text="DOC001" style="-fx-text-fill: #666;" />
                                        </VBox>
                                        <VBox spacing="5.0">
                                            <Label text="Email:" style="-fx-font-weight: bold;" />
                                            <Label fx:id="lblDoctorEmail" text="doctor@hospital.com" style="-fx-text-fill: #666;" />
                                        </VBox>
                                        <VBox spacing="5.0">
                                            <Label text="Especialidad:" style="-fx-font-weight: bold;" />
                                            <Label fx:id="lblSpeciality" text="Cardiología" style="-fx-text-fill: #666;" />
                                        </VBox>
                                    </HBox>
                                </VBox>
                            </children>
                        </AnchorPane>

                        <!-- Statistics Cards -->
                        <HBox spacing="15.0">
                            <AnchorPane prefHeight="100.0" prefWidth="250.0"
                                        style="-fx-background-color: #3498db; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                                <padding>
                                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                                </padding>
                                <children>
                                    <VBox spacing="5.0">
                                        <Label text="Total de Citas" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                                        <Label fx:id="lblTotalAppointments" text="0"
                                               style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />
                                    </VBox>
                                </children>
                            </AnchorPane>

                            <AnchorPane prefHeight="100.0" prefWidth="250.0"
                                        style="-fx-background-color: #2ecc71; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                                <padding>
                                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                                </padding>
                                <children>
                                    <VBox spacing="5.0">
                                        <Label text="Total de Pacientes" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                                        <Label fx:id="lblTotalPatients" text="0"
                                               style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />
                                    </VBox>
                                </children>
                            </AnchorPane>

                            <AnchorPane prefHeight="100.0" prefWidth="250.0"
                                        style="-fx-background-color: #e74c3c; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                                <padding>
                                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0" />
                                </padding>
                                <children>
                                    <VBox spacing="5.0">
                                        <Label text="Citas Pendientes" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                                        <Label fx:id="lblPendingAppointments" text="0"
                                               style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />
                                    </VBox>
                                </children>
                            </AnchorPane>
                        </HBox>

                        <!-- Appointments Section -->
                        <AnchorPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>
                            <children>
                                <VBox spacing="15.0">
                                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                                        <Label text="Mis Citas Programadas" style="-fx-font-weight: bold; -fx-font-size: 18px;">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <Separator prefWidth="760.0" />

                                    <!-- Lista de Citas -->
                                    <ListView fx:id="listViewAppointments" prefHeight="250.0"
                                              style="-fx-background-color: transparent; -fx-border-color: transparent;">
                                        <placeholder>
                                            <Label text="No tienes citas programadas"
                                                   style="-fx-text-fill: #999; -fx-font-size: 14px;" />
                                        </placeholder>
                                    </ListView>

                                    <Button fx:id="btnRefresh" text="Actualizar Lista"
                                            onAction="#onRefresh"
                                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 20 10 20;">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                </VBox>
                            </children>
                        </AnchorPane>

                        <!-- Patients Section -->
                        <AnchorPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>
                            <children>
                                <VBox spacing="15.0">
                                    <Label text="Lista de Pacientes" style="-fx-font-weight: bold; -fx-font-size: 18px;">
                                        <font>
                                            <Font name="System Bold" size="18.0" />
                                        </font>
                                    </Label>
                                    <Separator prefWidth="760.0" />

                                    <!-- Lista de Pacientes -->
                                    <ListView fx:id="listViewPatients" prefHeight="200.0"
                                              style="-fx-background-color: transparent; -fx-border-color: transparent;">
                                        <placeholder>
                                            <Label text="No tienes pacientes asignados"
                                                   style="-fx-text-fill: #999; -fx-font-size: 14px;" />
                                        </placeholder>
                                    </ListView>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </VBox>
                </content>
            </ScrollPane>
        </children>
    </AnchorPane>
</StackPane>