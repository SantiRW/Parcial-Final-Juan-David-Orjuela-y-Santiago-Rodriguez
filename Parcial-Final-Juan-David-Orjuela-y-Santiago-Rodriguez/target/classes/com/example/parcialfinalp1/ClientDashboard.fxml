<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.parcialfinalp1.Controllers.ClientDashboardController"
           prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #27C8F5;">

    <AnchorPane prefHeight="600.0" prefWidth="800.0">
        <children>
            <!-- Header -->
            <AnchorPane prefHeight="80.0" prefWidth="800.0" style="-fx-background-color: #1C4147;">
                <children>
                    <Label fx:id="lblWelcome" layoutX="30.0" layoutY="25.0"
                           style="-fx-text-fill: white; -fx-font-weight: bold;"
                           text="Dashboard de Cliente">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    <Label fx:id="lblClientName" layoutX="30.0" layoutY="50.0"
                           style="-fx-text-fill: #27C8F5;"
                           text="Nombre del Cliente">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </children>
            </AnchorPane>

            <!-- Main Content Area -->
            <ScrollPane layoutY="80.0" prefHeight="520.0" prefWidth="800.0"
                        fitToWidth="true" style="-fx-background-color: transparent;">
                <content>
                    <VBox spacing="20.0" style="-fx-background-color: #27C8F5;">
                        <padding>
                            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                        </padding>

                        <!-- Client Information Card -->
                        <AnchorPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>
                            <children>
                                <VBox spacing="10.0">
                                    <Label text="Información Personal" style="-fx-font-weight: bold; -fx-font-size: 18px;">
                                        <font>
                                            <Font name="System Bold" size="18.0" />
                                        </font>
                                    </Label>
                                    <Separator prefWidth="760.0" />
                                    <HBox spacing="50.0">
                                        <VBox spacing="5.0">
                                            <Label text="ID:" style="-fx-font-weight: bold;" />
                                            <Label fx:id="lblClientId" text="12345" style="-fx-text-fill: #666;" />
                                        </VBox>
                                        <VBox spacing="5.0">
                                            <Label text="Email:" style="-fx-font-weight: bold;" />
                                            <Label fx:id="lblClientEmail" text="cliente@email.com" style="-fx-text-fill: #666;" />
                                        </VBox>
                                    </HBox>
                                </VBox>
                            </children>
                        </AnchorPane>

                        <!-- Appointments Section -->
                        <AnchorPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>
                            <children>
                                <VBox spacing="15.0">
                                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                                        <Label text="Mis Citas Médicas" style="-fx-font-weight: bold; -fx-font-size: 18px;">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="lblAppointmentCount" text="(0)"
                                               style="-fx-text-fill: #3498db; -fx-font-size: 16px; -fx-font-weight: bold;" />
                                    </HBox>
                                    <Separator prefWidth="760.0" />

                                    <!-- Lista de Citas -->
                                    <ListView fx:id="listViewAppointments" prefHeight="300.0"
                                              style="-fx-background-color: transparent; -fx-border-color: transparent;">
                                        <placeholder>
                                            <Label text="No tienes citas programadas"
                                                   style="-fx-text-fill: #999; -fx-font-size: 14px;" />
                                        </placeholder>
                                    </ListView>

                                    <HBox spacing="10.0" alignment="CENTER">
                                        <Button fx:id="btnNewAppointment" text="Nueva Cita"
                                                onAction="#onNewAppointment"
                                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 20 10 20;">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="btnRefresh" text="Actualizar"
                                                onAction="#onRefresh"
                                                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 20 10 20;">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </Button>
                                    </HBox>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </VBox>
                </content>
            </ScrollPane>
        </children>
    </AnchorPane>
</StackPane>