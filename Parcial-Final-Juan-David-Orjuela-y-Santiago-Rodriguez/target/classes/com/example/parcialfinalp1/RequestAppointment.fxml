<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.parcialfinalp1.Controllers.RequestAppointmentController"
           prefHeight="525.0" prefWidth="400.0" style="-fx-background-color: #296685;">

    <VBox spacing="20.0" alignment="TOP_CENTER" style="-fx-background-color: #296685;">
        <padding>
            <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
        </padding>

        <Label text="Solicitar Nueva Cita" style="-fx-text-fill: white; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Separator prefWidth="340.0" style="-fx-background-color: white;" />

        <!-- Formulario -->
        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">

            <VBox spacing="5.0">
                <Label text="Selecciona un Doctor:" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbDoctors" promptText="Selecciona un doctor" prefWidth="340.0" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="Fecha de la Cita:" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <DatePicker fx:id="datePicker" promptText="Selecciona una fecha" prefWidth="340.0" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="Hora:" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbTime" promptText="Selecciona una hora" prefWidth="340.0" />
            </VBox>

            <VBox spacing="5.0">
                <Label text="Motivo de Consulta:" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextArea fx:id="txtReason" promptText="Describe brevemente el motivo de tu consulta"
                          prefHeight="100.0" prefWidth="340.0" wrapText="true" />
            </VBox>

            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="btnSubmit" text="Solicitar Cita" onAction="#onSubmit"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 30 10 30;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnCancel" text="Cancelar" onAction="#onCancel"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 30 10 30;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>

        <Label fx:id="lblMessage" text="" style="-fx-text-fill: #2ecc71; -fx-font-weight: bold;">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </VBox>
</StackPane>